<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Image.SingleImage"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/current_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#411E1E"
            android:backgroundTint="#31782B"
            android:text="set as wallpaper"
            android:textColor="#F6EFEF" />

        <Button
            android:id="@+id/img_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CA1D1D"
            android:text="delete"
            android:visibility="gone"
            android:textColor="#E3D4D4"
            android:background="#411E1E" />
    </LinearLayout>

</LinearLayout>